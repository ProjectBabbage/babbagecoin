    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Miner",
            "type": "python",
            "request": "launch",
            "program": "src/app.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "miner"
            ]
        },
        {
            "name": "Debug Master",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src/app.py:master_app",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--host=0.0.0.0"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Debug unittest",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "env": {
                "FLASK_APP": "src/app.py:master_app",
                "FLASK_ENV": "development"
            },
            "args": [
                "discover",
                "--start-directory",
                "src"
            ],
            "justMyCode": true
        }
    ]
}